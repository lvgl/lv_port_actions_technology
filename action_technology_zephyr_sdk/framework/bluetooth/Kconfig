config BT_ANCS_AMS
	bool
	prompt "Bt ancs ams Support"
	default n
	select BT_SMP_ALLOW_UNAUTH_OVERWRITE
	select BT_KEYS_OVERWRITE_OLDEST
	select BT_GATT_CLIENT
	select BT_CENTRAL
	select BT_DIS
	help
	This option enable or disable ancs_ams

